<resources>

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.GoOutWithDuck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_color_dark_green</item>
        <item name="colorOnPrimary">@color/app_color_inverse_text</item>
        <item name="colorPrimaryDark">@color/app_color_dark_green_night</item>
        <item name="colorOnSurface">@color/app_color_inverse_text</item>
        <item name="colorAccent">@color/app_color_light_green</item>
        <item name="colorSurface">@color/app_color_dark_green_night</item>
        <item name="colorSecondary">@color/app_color_yellow</item>
        <item name="android:windowBackground">@color/app_color_dark_green_night</item>
    </style>

    <style name="ButtonStyleTextColor">
        <item name="colorOnPrimary">?attr/colorControlActivated</item>
    </style>

    <style name="CardView.MainBackground" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MainBackgroundCard</item>
        <item name="cardBackgroundColor">?android:windowBackground</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Theme.GoOutWithDuck" parent="Base.Theme.GoOutWithDuck"/>

    <style name="Theme.GoOutWithDuck.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GoOutWithDuck.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

</resources>
